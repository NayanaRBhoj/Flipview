<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <com.nayana.bhoj.apps.flipbook.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="100 Christmas Special 001"
            android:textColor="@color/gray_new"
            android:textSize="34sp"
            app:font="MerryChristmasFlake.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="5dp"
                android:transitionName="profile"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/llimage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_pink"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/santastory_1_header" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="5dp"
                android:transitionName="profile"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/llimage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_pink"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="22dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/santastory_2_header" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <com.nayana.bhoj.apps.flipbook.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Other Samples"
            android:textColor="@color/gray_new"
            android:textSize="34sp"
            app:font="MerryChristmasFlake.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="5dp"
                android:transitionName="profile"
                android:visibility="visible"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/llimage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_pink"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="22dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/coffeestory_header" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="5dp"
                android:transitionName="profile"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/llimage6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_pink"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/boys_header" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="5dp"
                android:transitionName="profile"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/llimage7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_pink"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cricketstory_3_header" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="5dp"
                android:transitionName="profile"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/llimage4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_pink"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="22dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cricket_header" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="5dp"
                android:transitionName="profile"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/llimage5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_pink"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingBottom="30dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cricketstory_2_header" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_createnow"
            android:layout_width="wrap_content"
            android:text="create now"
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>

